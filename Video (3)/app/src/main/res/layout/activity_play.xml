<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neu.video.PlayActivity"
    android:focusableInTouchMode="true">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/back"
        android:onClick="toIndex"/>
    <!--<LinearLayout-->
        <!--android:id="@+id/desc"-->
        <!--android:layout_below="@id/videoplayer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!---->
    <!--</LinearLayout>-->

    <!--导航栏-->
    <LinearLayout
        android:background="@drawable/nav_border"
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/videoplayer"
        >

        <TextView
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="show1"
            android:text="简介"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@id/btn1"
            android:text="影评"
            android:onClick="show2"/>
    </LinearLayout>

    <!--简介-->
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/text1"
    android:layout_below="@id/nav"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/t01"
            />
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/video_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="悬崖之上zz"
                    android:textColor="#000000"
                    android:textSize="28dp"
                    />
                <TextView
                    android:id="@+id/vscore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="8.0"
                    android:textColor="@color/orange"
                    android:textSize="28dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上映时间："/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="XXXXXX"/>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_star"
                    android:onClick="star"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn"
                    >
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/star_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/star2"/>
                    <TextView
                        android:layout_width="80dp"
                        android:padding="4dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:text="收藏"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="类型："/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="导演："/>
        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx/xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="演员："/>
        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx/xxx/xxx/xxx/xxx"/>
    </LinearLayout>

    <TextView

        android:id="@+id/story"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="二十世纪三十年代，四位曾在苏联接受特训的共产党特工组成任务小队，回国执行代号为“乌特拉”的秘密行动。由于叛徒的出卖，他们从跳伞降落的第一刻起， 就已置身于敌人布下的罗网之中。同志能否脱身，任务能否完成，雪一直下，立于“悬崖之上”的行动小组面临严峻考验"/>
    <!--android:maxLines="4"-->
    <!--android:ellipsize="end"-->
</LinearLayout>

    <!--影评-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/text2"
    android:layout_below="@id/text1"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="我的评分"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/s01"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star2"
            android:onClick="score01"/>
        <ImageView
            android:id="@+id/s02"
            android:layout_marginLeft="10dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star2"
            android:onClick="score02"/>
        <ImageView
            android:id="@+id/s03"
            android:layout_marginLeft="10dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star2"
            android:onClick="score03"/>
        <ImageView
            android:id="@+id/s04"
            android:layout_marginLeft="10dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star2"
            android:onClick="score04"/>
        <ImageView
            android:id="@+id/s05"
            android:layout_marginLeft="10dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star2"
            android:onClick="score05"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        />
    <!--<TextView-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="评论功能暂未开放"/>-->
    <EditText
        android:id="@+id/mywords"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="写评论..."/>
    <Button
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:text="发布"
        android:background="@color/orange"
        android:onClick="setmywords"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="查看所有评论"
        android:onClick="findAllEva"/>


</LinearLayout>




</RelativeLayout>

</ScrollView>
